<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bookyrself.bookyrself">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".StartupActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.Onboarding"
            android:label="@string/title_activity_onboarding"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.EventDetailActivity"
            android:label="EventDetail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.UserDetailActivity"
            android:label="EventDetail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.ProfileEditActivity"
            android:label="ProfileCreation"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".views.EventCreationActivity"
            android:label="@string/title_activity_event_creation"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>