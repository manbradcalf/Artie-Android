<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout_profile_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bookyrself.bookyrself.ProfileActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/username_profile_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="66dp"
            android:text="User Name"
            android:textAppearance="@android:style/TextAppearance.Material.Display1"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_profile_activity"
            android:layout_centerInParent="true"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <!--Main Info Card -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:contentPadding="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/city_state_profile_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="CityState"
                        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                    <TextView
                        android:id="@+id/tags_profile_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/city_state_profile_activity"
                        android:text="Tags, Tag, Ta"
                        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                    <TextView
                        android:id="@+id/user_url_profile_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tags_profile_activity"
                        android:layout_gravity="center_horizontal"
                        android:text="awebsite.com"
                        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                </RelativeLayout>

                <ImageView
                    android:id='@+id/profile_image'
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/ic_profile_black_24dp" />

            </android.support.v7.widget.CardView>


            <!-- Message User Card -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:contentPadding="16dp">

                <ImageView
                    android:id="@+id/message_profile_activity_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_messages_black_24dp" />

                    <TextView
                        android:id="@+id/message_profile_activity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:text="Message this user!"
                        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:contentPadding="16dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/bio_header_profile_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Bio"
                        android:textAppearance="@android:style/TextAppearance.Material.Title" />

                    <TextView
                        android:id="@+id/bio_body_profile_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/bio_header_profile_activity"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:text="bio placeholder blah blah blah"
                        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="wrap_content"
                android:layout_height="298dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="14dp" />

        </LinearLayout>

        <include
            layout="@layout/element_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
