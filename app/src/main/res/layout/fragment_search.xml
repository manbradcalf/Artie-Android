<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bookyrself.bookyrself.views.SearchFragment">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@color/cardview_light_background"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.SearchView
            android:id="@+id/search_what"
            style="@style/SearchViewStyleWhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appBarLayout"
            android:layout_marginTop="15dp"
            android:queryHint="@string/search_what_query_hint" />

        <android.support.v7.widget.SearchView
            android:id="@+id/search_where"
            style="@style/SearchViewStyleWhere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appBarLayout"
            android:layout_marginTop="15dp"
            android:queryHint="@string/search_where_query_hint" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/from_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="From" />

            <Button
                android:id="@+id/to_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="To" />

            <Button
                android:id="@+id/search_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/colorAccent"
                android:text="Search!"
                android:textColor="@android:color/white"/>

        </LinearLayout>


        <RadioGroup
            android:id="@+id/radio_group_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/users_toggle"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:background="@drawable/radio_button_background"
                android:text="Users"
                android:textAlignment="center"/>

            <RadioButton
                android:id="@+id/events_toggle"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                android:button="@android:color/transparent"
                android:background="@drawable/radio_button_background"
                android:textAlignment="center"
                android:text="Events" />

        </RadioGroup>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_below="@id/appBarLayout">

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" />

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/empty_state_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/empty_state_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_concert" />

            <TextView
                android:layout_below="@id/empty_state_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/empty_state_text"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:text="@string/search_empty_state"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_above="@+id/navigation"
            android:scrollbars="vertical" />

        <include
            layout="@layout/element_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


</RelativeLayout>
