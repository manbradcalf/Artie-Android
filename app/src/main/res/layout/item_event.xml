<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/tools"
android:id="@+id/event_item_card"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
android:background="@android:color/white"
android:foreground="?attr/selectableItemBackground"
card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
card_view:cardElevation="@dimen/card_recycler_elevation">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/text_margin">

    <ImageView
        android:id="@+id/event_item_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/text_margin"
        android:background="@drawable/round"
        android:backgroundTint="@android:color/darker_gray"
        android:transitionName="shareView" />

    <TextView
        android:id="@+id/event_item_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/event_item_image"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/event_item_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_item_line1"
        android:layout_marginTop="@dimen/text_margin_very_small"
        android:layout_toEndOf="@id/event_item_image" />

    <TextView
        android:id="@+id/event_item_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_item_line2"
        android:layout_marginTop="@dimen/text_margin_very_small"
        android:layout_toEndOf="@id/event_item_image" />

</RelativeLayout>
</android.support.v7.widget.CardView>