<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bookyrself.bookyrself.SearchActivity">

    <android.support.design.widget.AppBarLayout
        android:backgroundTint="@color/cardview_light_background"
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.SearchView
            android:id="@+id/search_what"
            style="@style/SearchViewStyleWhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appBarLayout"
            android:layout_marginTop="15dp"
            android:queryHint="tags, usernames, etc" />

        <android.support.v7.widget.SearchView
            android:id="@+id/search_where"
            style="@style/SearchViewStyleWhere"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/appBarLayout"
            android:layout_marginTop="15dp"
            android:queryHint="location" />

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/from_textview"
                style="?android:attr/spinnerStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="From"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:id="@+id/to_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="?android:attr/spinnerStyle"
                android:text="To"/>
        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_below="@id/appBarLayout">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/search_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:layout_marginBottom="?attr/actionBarSize"/>

        <include
            layout="@layout/element_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>


</RelativeLayout>
