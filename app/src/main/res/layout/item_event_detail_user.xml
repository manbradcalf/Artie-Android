<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_event_detail_userthumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_profile_black_24dp"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@id/item_event_detail_userthumb"
            android:orientation="vertical"
            android:padding="8dp">


            <TextView
                android:id="@+id/item_event_detail_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textAppearance="@android:style/TextAppearance.Material.Body1" />

            <TextView
                android:id="@+id/item_event_detail_citystate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="city, state"
                android:textAppearance="@android:style/TextAppearance.Material.Body1" />

            <TextView
                android:id="@+id/item_event_detail_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/userUrl"
                android:textAppearance="@android:style/TextAppearance.Material.Body1" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/item_event_detail_messagebutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@drawable/ic_messages_black_24dp" />


    </RelativeLayout>


</android.support.v7.widget.CardView>