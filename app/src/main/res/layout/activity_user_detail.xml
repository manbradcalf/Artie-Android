<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_detail_scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout

        android:id="@+id/coordinator_layout_profile_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.bookyrself.bookyrself.views.UserDetailActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_user_detail"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:titleTextColor="@color/colorAccentLight" />
        </android.support.design.widget.AppBarLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/user_detail_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize">

            <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerInParent="true">-->
            <!--<ProgressBar-->
            <!--android:layout_marginTop="?attr/actionBarSize"-->
            <!--android:id='@+id/content_loading_progressbar'-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
            <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:id="@+id/user_detail_loading_text"-->
            <!--android:text="Loading user details"/>-->
            <!--</LinearLayout>-->


            <ProgressBar
                android:id="@+id/profile_image_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id='@+id/profile_image_user_detail_activity'
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/username_user_detail_activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_image_user_detail_activity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="User Name"
                android:textAppearance="@android:style/TextAppearance.Material.Display1"
                android:textColor="@color/common_google_signin_btn_text_dark_focused" />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/username_user_detail_activity"
                android:layout_centerInParent="true"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

                <!--Main Info Card -->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:contentPadding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/city_state_user_detail_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="CityState"
                            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                        <TextView
                            android:id="@+id/tags_user_detail_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Tags, Tag, Ta"
                            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                        <TextView
                            android:id="@+id/user_url_user_detail_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="awebsite.com"
                            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                    </LinearLayout>


                </android.support.v7.widget.CardView>


                <!-- Message User Card -->
                <android.support.v7.widget.CardView
                    android:id="@+id/message_user_detail_activity_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    app:contentPadding="16dp">

                    <ImageView
                        android:id="@+id/message_user_detail_activity_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="8dp"
                        android:src="@drawable/ic_messages_black_24dp" />

                    <TextView
                        android:id="@+id/message_user_detail_activity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                </android.support.v7.widget.CardView>

                <!-- Message User Card -->
                <android.support.v7.widget.CardView
                    android:id="@+id/add_user_to_contacts_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    app:contentPadding="16dp">

                    <ImageView
                        android:id="@+id/add_user_to_contacts_imageview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="8dp"
                        android:src="@drawable/ic_person_add_black_24dp" />

                    <TextView
                        android:id="@+id/add_user_to_contacts_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    app:contentPadding="16dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <TextView
                            android:id="@+id/bio_header_user_detail_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Bio"
                            android:textAppearance="@android:style/TextAppearance.Material.Title" />

                        <TextView
                            android:id="@+id/bio_body_user_detail_activity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/bio_header_user_detail_activity"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center_horizontal"
                            android:text="bio placeholder blah blah blah"
                            android:textAppearance="@android:style/TextAppearance.Material.Body1" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>


                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/user_detail_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.design.widget.CoordinatorLayout>
</ScrollView>