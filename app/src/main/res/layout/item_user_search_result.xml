<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/search_result_card_users"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_margin_vertical_big_activity"
    android:layout_marginEnd="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginStart="@dimen/card_margin_horizontal_big_activity"
    android:layout_marginTop="@dimen/card_margin_vertical_big_activity"
    android:background="@android:color/white"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/text_margin">

        <ImageView
            android:id="@+id/user_image_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/text_margin"
            android:background="@drawable/round"
            android:backgroundTint="@android:color/darker_gray"
            android:transitionName="shareView" />

        <TextView
            android:id="@+id/username_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/user_image_search_result"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/user_location_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_search_result"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toEndOf="@id/user_image_search_result" />

        <TextView
            android:id="@+id/user_tag_search_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_location_search_result"
            android:layout_marginTop="@dimen/text_margin_very_small"
            android:layout_toEndOf="@id/user_image_search_result" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>